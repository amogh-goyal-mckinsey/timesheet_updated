// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  fmno          String    @unique  // Numerical employee ID (visible, not hidden like password)
  name          String?
  roles         Role[]    @default([EMPLOYEE])
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  timeEntries           TimeEntry[]
  chargeCodeAccess      EmployeeChargeCodeAccess[]
  periodChargeCodes     UserPeriodChargeCode[]

  @@map("users")
}

model ChargeCode {
  id          String    @id @default(cuid())
  code        String    @unique
  description String
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  timeEntries         TimeEntry[]
  employeeAccess      EmployeeChargeCodeAccess[]
  userPeriodCodes     UserPeriodChargeCode[]

  @@map("charge_codes")
}

// Future-proofing: Junction table for restricting charge code access per user
// Current logic defaults to allowing all users access to all active charge codes
model EmployeeChargeCodeAccess {
  id            String     @id @default(cuid())
  userId        String     @map("user_id")
  chargeCodeId  String     @map("charge_code_id")
  createdAt     DateTime   @default(now()) @map("created_at")

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  chargeCode  ChargeCode @relation(fields: [chargeCodeId], references: [id], onDelete: Cascade)

  @@unique([userId, chargeCodeId])
  @@map("employee_charge_code_access")
}

// Store which charge codes a user has added for each period (independent per period)
model UserPeriodChargeCode {
  id            String     @id @default(cuid())
  userId        String     @map("user_id")
  chargeCodeId  String     @map("charge_code_id")
  periodStart   DateTime   @db.Date @map("period_start")
  createdAt     DateTime   @default(now()) @map("created_at")

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  chargeCode  ChargeCode @relation(fields: [chargeCodeId], references: [id], onDelete: Cascade)

  @@unique([userId, chargeCodeId, periodStart])
  @@index([userId, periodStart])
  @@map("user_period_charge_codes")
}

model TimeEntry {
  id            String     @id @default(cuid())
  userId        String     @map("user_id")
  chargeCodeId  String     @map("charge_code_id")
  date          DateTime   @db.Date
  hours         Int        @db.SmallInt // Constrained to 1-7 at application layer
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  chargeCode  ChargeCode @relation(fields: [chargeCodeId], references: [id], onDelete: Cascade)

  @@unique([userId, chargeCodeId, date])
  @@index([userId, date])
  @@map("time_entries")
}

// Admin settings for period restrictions
model AdminSettings {
  id                    String    @id @default(cuid())
  oldestEditablePeriod  DateTime? @db.Date @map("oldest_editable_period")
  latestEditablePeriod  DateTime? @db.Date @map("latest_editable_period")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  @@map("admin_settings")
}
